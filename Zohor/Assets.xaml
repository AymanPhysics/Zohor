                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="White" Offset="0" />
                        <GradientStop Color="#37FFFF00" Offset="1" />
                    </LinearGradientBrush>
                </TextBox.Background>
            </TextBox>
            <Label Content="المجمع السابق" Height="28" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Margin="-25,250,437,65" x:Name="lblMainBal0_Copy1" UseLayoutRounding="True" VerticalAlignment="Center" Width="194"  BorderThickness="1" BorderBrush="#FF078200" Foreground="#FF078200"/>
