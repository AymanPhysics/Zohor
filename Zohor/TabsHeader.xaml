<UserControl x:Class="TabsHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="23" d:DesignWidth="149">
    <Grid Name="Grid1">
        <TextBlock Height="21" Name="TextBlock1" Text="TextBlock" VerticalAlignment="Top" TextAlignment="Center" Margin="43,2,0,0" Width="Auto" HorizontalAlignment="Stretch">
            
        </TextBlock>
        <Button Content="X" Height="23" HorizontalAlignment="Left" Name="Button1" VerticalAlignment="Top" Width="32" Style="{DynamicResource GlossyCloseButton}" BorderBrush="{x:Null}">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#83D20000" Offset="0" />
                    <GradientStop Color="#FFB42626" Offset="1" />
                </LinearGradientBrush>
            </Button.Background>
        </Button>
    </Grid>
</UserControl>
